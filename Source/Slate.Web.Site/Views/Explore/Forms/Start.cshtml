@model LayoutModel<StartFormModel>

<div class="start-form">
	<h2>Start a form</h2>

	<div class="description">
		Rich knowledge capture. Fine-tuned workflow. A form is a conversation with your data.
	</div>

	<div>
		<div class="caption">
			Start with a name reflecting the form's purpose:
		</div>

		<div class="action">
			@using(Html.BeginForm("Start", "Forms"))
			{
				@Html.TextBox("name", "", new { @class = "name" })

				<div class="guidance">
					Try to express what is interesting about this form across all forms.
					(<a href="~/help/naming/forms">details</a>)
				</div>
		 
			 <div>
				 Next: <input class="submit" type="submit" value="specify details &gt;&gt;" />
			 </div>
			}
		</div>
	</div>
</div>