<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ui="clr-namespace:Dash.Windows.UI.Presentation">

	<DataTemplate DataType="{x:Type ui:BoardModel}">
		<Grid Background="{StaticResource lightBrush}" TextBlock.Foreground="{StaticResource darkBrush}">
			<StackPanel Margin="0 6 12 12">
				<TextBlock Style="{StaticResource appTitle}" Text="Dash" Margin="12 0 0 0" />
				<ItemsControl ItemsSource="{Binding Topics}" Margin="0 6 0 0">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<WrapPanel />
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
				</ItemsControl>
			</StackPanel>
		</Grid>
	</DataTemplate>

	<DataTemplate DataType="{x:Type ui:TopicModel}">
		<Border BorderBrush="{StaticResource darkBrush}" BorderThickness="2" Margin="12 6 0 0" Padding="12 6" Background="White">
			<TextBlock Text="Topic" />
		</Border>
	</DataTemplate>

</ResourceDictionary>