<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:presentation="clr-namespace:Dash.Windows.Presentation;assembly=Dash.Windows.Presentation">

	<DataTemplate DataType="{x:Type presentation:DashView}">
		<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="{StaticResource dashLightBrush}" Padding="7 7 0 0">
			<StackPanel>
				<ItemsControl ItemsSource="{Binding Topics}">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<WrapPanel Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ViewportWidth}" />
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
				</ItemsControl>
				<TextBlock Text="{Binding Username}" Foreground="{StaticResource dashDarkBrush}" />
				<TextBlock Text="{Binding WhenModified}" Foreground="{StaticResource dashDarkBrush}" FontSize="8" />
			</StackPanel>
		</ScrollViewer>
	</DataTemplate>

</ResourceDictionary>